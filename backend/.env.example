# ==================== CONFIGURAÇÕES DO SERVIDOR ====================
PORT=3001
NODE_ENV=development

# ==================== AUTENTICAÇÃO DA API ====================
# Opcional: Chave de API para proteger endpoints
# Se não definida, os endpoints ficam abertos
API_KEY=sua_chave_api_secreta_aqui

# ==================== SUPABASE ====================
# URL do projeto Supabase
SUPABASE_URL=https://seu-projeto.supabase.co

# Chave anônima do Supabase (pública)
SUPABASE_ANON_KEY=sua_chave_anonima_aqui

# ==================== SHOPEE API ====================
# ID do parceiro Shopee
SHOPEE_PARTNER_ID=seu_partner_id

# Chave do parceiro Shopee (secreta)
SHOPEE_PARTNER_KEY=sua_partner_key_secreta

# ID da loja padrão (opcional)
SHOPEE_SHOP_ID=seu_shop_id_padrao

# URL base da API Shopee
SHOPEE_BASE_URL=https://partner.shopeemobile.com

# ==================== CONFIGURAÇÕES DE PERFORMANCE ====================
# Máximo de lojas processadas simultaneamente
MAX_CONCURRENCY=3

# Tamanho do lote para buscar detalhes de pedidos
BATCH_SIZE=50

# Limite máximo de páginas para evitar loops infinitos
MAX_PAGES=100

# Delay entre requisições (em milissegundos)
REQUEST_DELAY=2000

# ==================== LOGS ====================
# Nível de log (debug, info, warn, error)
LOG_LEVEL=info

# Habilitar logs detalhados
DEBUG=false